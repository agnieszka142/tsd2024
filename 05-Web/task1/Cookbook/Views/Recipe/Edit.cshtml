@model Recipe

<h2>Edit Recipe</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Time:</label>
        <input asp-for="Time" class="form-control" />
    </div>
    <div class="form-group">
        <label>Difficulty:</label>
        <input asp-for="Difficulty" class="form-control" />
    </div>
    <div class="form-group">
        <label>Likes:</label>
        <input asp-for="NumberOfLikes" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ingredients:</label>
        <input asp-for="Ingredients" class="form-control" />
    </div>
    <div class="form-group">
        <label>Process:</label>
        <input asp-for="Process" class="form-control" />
    </div>
    <div class="form-group">
        <label>TipsAndTricks:</label>
        <input asp-for="TipsAndTricks" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>